#!/usr/bin/env python
from argparse import ArgumentParser
from pypromice.aws import AWS

def parse_arguments():
    parser = ArgumentParser(description="AWS L3 processor")

    parser.add_argument('-c', '--config_file', type=str, required=True,
                        help='Path to config (TOML) file')
    parser.add_argument('-i', '--inpath', default='data', type=str, required=True, 
                        help='Path to input data')
    parser.add_argument('-o', '--outpath', default='data', type=str, required=True, 
                        help='Path where to write output')
    parser.add_argument('-v', '--variables', default='./variables.csv', type=str, 
                        required=False, help='File path to variables look-up table')
    parser.add_argument('-m', '--metadata', default='./metadata.csv', type=str, 
                        required=False, help='File path to metadata')
    args = parser.parse_args()
    return args


if __name__ == '__main__':
    """Executed from the command line"""
    args = parse_arguments()
    pAWS = AWS(args.config_file, args.inpath, args.outpath, args.variables, args.metadata)

else:
    """Executed on import"""
    pass
        
